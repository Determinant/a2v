{
    // the release of avalanchego being used
    "release": "v1.4.2",
    // path to the directory root that holds all databases and logs for validators, on the host
    "workDir": "/bigboy/stakers",
    // relative path to the location of this file, the directory that holds all validator crendentials
    "keysDir": "./keys",
    "baseStakingPort": 9651,
    "baseHttpPort": 9650,
    // you don't need all them, just as an example of three hosts, each having different numbers of validators
    "hosts": {
        "example": {
            "host": "13.229.114.242",
            "username": "ubuntu",
            "privateKeyFile": "/home/ymf/.ssh/ted-my-aws-key.pem",
            "validators": ["mystaker"],
            // number of cores
            "ncpu": 2,
            // number of cores allocated for each node
            "cpuPerNode": 1,
            // shifts of core allocation around all nodes
            "cpuStride": 1
        },
        "docker1": {
            "host": "avax-host-1",
            "username": "ubuntu",
            "privateKeyFile": "/home/ymf/.ssh/ted-my-aws-key.pem",
            "validators": ["staker0", "staker1", "staker2", "staker3"],
            "ncpu": 8,
            "cpuPerNode": 3,
            "cpuStride": 2
        },
        "docker2": {
            "host": "avax-host-2",
            "username": "ubuntu",
            "privateKeyFile": "/home/ymf/.ssh/ted-my-aws-key.pem",
            "validators": ["staker8", "staker9", "staker10"],
            "ncpu": 8,
            "cpuPerNode": 3,
            "cpuStride": 2
        }
    }
}
